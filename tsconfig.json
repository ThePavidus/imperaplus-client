{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [
      "es6",
      "dom",
      "es5",
      "scripthost"
    ]
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}